<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/id_individual_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="3: "
                android:textColor="@color/colorDark"
                android:textSize="@dimen/size16" />

            <TextView
                android:id="@+id/client_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/id_individual_work"
                android:text="client is: ssss"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/size16" />

            <TextView
                android:id="@+id/trainer_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/client_id"
                android:text="trainer: ssss"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/size16" />


            <TextView
                android:id="@+id/time_start_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_individual_work"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="time start: 15:00, time end: 444"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/size12" />

            <TextView
                android:id="@+id/day_working"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:text="Sunday"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/size16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/time_start_end"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:background="#c2c2c2" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>